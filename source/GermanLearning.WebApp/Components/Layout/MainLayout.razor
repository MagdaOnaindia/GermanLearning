@inherits LayoutComponentBase
@using MudBlazor

<PageTitle>GermanLearning</PageTitle>

<!-- Componentes globales de MudBlazor -->


<!-- Layout principal -->
<MudLayout>
    <MudAppBar Elevation="4" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-2">GermanLearning</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               Variant="DrawerVariant.Responsive"
               Elevation="2"
               ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="p-4" Style="margin-top: 64px;">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
}
